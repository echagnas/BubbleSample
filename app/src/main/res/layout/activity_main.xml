<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777777"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="manu.bubblesample.MainActivity">

    <manu.bubblesample.BubbleView
        android:id="@+id/bubbleLeft"
        android:layout_width="100dp"
        android:layout_height="300dp"
        app:bubble_arrow_height="10dp"
        android:background="#666666"
        app:bubble_arrow_position="Left"
        app:bubble_text="test"
        app:bubble_text_color="@color/colorPrimaryDark"
        app:bubble_color="@color/colorAccent"
        app:bubble_roundrect_size="10dp"
        app:bubble_text_size="30sp"
        app:bubble_size="100dp"/>

    <manu.bubblesample.BubbleView
        android:id="@+id/bubbleTop"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#666666"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        app:bubble_arrow_height="30dp"
        app:bubble_arrow_position="Top"
        app:bubble_text="test"
        app:bubble_text_color="@color/colorAccent"
        app:bubble_color="@color/colorPrimary"
        app:bubble_roundrect_size="5dp"
        app:bubble_text_size="20sp"
        app:bubble_size="100dp"/>

    <manu.bubblesample.BubbleView
        android:id="@+id/bubbleRight"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:background="#666666"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        app:bubble_arrow_height="30dp"
        app:bubble_text="test"
        app:bubble_text_color="@color/colorPrimaryDark"
        app:bubble_arrow_position="Right"
        app:bubble_roundrect_size="30dp"
        app:bubble_text_size="10sp"
        app:bubble_size="100dp"/>

    <manu.bubblesample.BubbleView
        android:id="@+id/bubbleBottom"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#666666"
        android:layout_below="@id/bubbleLeft"
        android:layout_marginTop="50dp"
        app:bubble_arrow_height="10dp"
        app:bubble_arrow_position="Bottom"
        app:bubble_text="test"
        app:bubble_text_color="@color/colorArrow"
        app:bubble_color="@color/colorPrimaryDark"
        app:bubble_roundrect_size="10dp"
        app:bubble_text_size="25sp"
        app:bubble_size="100dp"/>


</RelativeLayout>
